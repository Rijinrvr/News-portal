extends layout 
block content

    .row.mx-5.mt-3
        each news in newsitems
            .col-md-3
                .card.mt-3.mx-3(style='max-width:100rem; height:30rem;')
                    img.card-img-top(src=`${news.imageurl}` style='height:20rem' alt='Sunset Over the Sea')
                    .card-body
                        h3.card-text
                            | #{news.title}
                            a.btn.btn-success.btn-right.mx-3(href='/view/'+news._id) Read News    



